<script is:inline>
  (() => {
    const nav = document.querySelector('.main-nav');
    const secondary = nav?.querySelector('.secondary-row');
    const threshold = 120;
    let fadeTimer;
    let lastSticky = false;
    const handleScroll = () => {
      if (!nav) return;
      const isSticky = window.scrollY > threshold;
      if (isSticky !== lastSticky) {
        nav.classList.toggle('is-sticky', isSticky);
        nav.classList.add('fade-in');
        clearTimeout(fadeTimer);
        fadeTimer = setTimeout(() => nav.classList.remove('fade-in'), 260);
        lastSticky = isSticky;
      }
      if (secondary) {
        secondary.classList.toggle('md:hidden', isSticky);
        secondary.classList.toggle('md:flex', !isSticky);
      }
    };
    handleScroll();
    window.addEventListener('scroll', handleScroll, { passive: true });
  })();
</script>
