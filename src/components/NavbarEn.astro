  .main-nav.is-sticky {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    box-shadow: 0 10px 30px rgba(15, 23, 42, 0.12);
  }
  .main-nav:not(.is-sticky) {
    transform: translateY(0);
  }
  .main-nav.fade-in {
    animation: navFade 200ms ease;
  }
  @keyframes navFade {
