---
import Layout from '../../layouts/Layout.astro';
import PimpinanFpbs from '../../components/pimpinan/PimpinanFpbs.astro';
const slugId = 'page-pimpinan';
const pageHeading = 'Pimpinan';
const pageSubtitle = 'Fakultas Pendidikan Bahasa dan Sastra - UPI';
---

<Layout
  pageHeading={pageHeading}
  pageSubtitle={pageSubtitle}
  breadcrumbItems={[
    { label: 'Beranda', href: '/index.html' },
    { label: 'Pimpinan' },
  ]}
  pageHeadingOverlay="linear-gradient(90deg, rgba(31,15,61,0.85) 0%, rgba(49,26,92,0.70) 55%, rgba(31,15,61,0.45) 100%)"
  pageHeadingAlign="left"
>
  <PimpinanFpbs />
</Layout>

<!-- CSS PhotoSwipe -->
<link rel="stylesheet" href="/vendor/photoswipe/photoswipe.css" />

<!-- JS PhotoSwipe inisialisasi (harus is:inline) -->
<script is:inline type="module">
  import PhotoSwipeLightbox from '/vendor/photoswipe/photoswipe-lightbox.esm.js';
  import PhotoSwipe from '/vendor/photoswipe/photoswipe.esm.js';

  const lightbox = new PhotoSwipeLightbox({
    gallery: '#pimpinan-gallery',
    children: 'a',
    pswpModule: () => Promise.resolve(PhotoSwipe)
  });
  lightbox.init();
</script>
