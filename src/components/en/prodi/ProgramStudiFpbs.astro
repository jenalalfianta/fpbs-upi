    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {programs.map((prodi) => (
        <div class="group bg-white dark:bg-gray-800 shadow rounded-xl p-6 text-left hover:translate-y-1 hover:shadow-2xl transition duration-300 ease-in-out">
