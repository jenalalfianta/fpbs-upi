---
import Layout from '../../layouts/Layout.astro';
import Sejarah from '../../components/profil/Sejarah.astro';
import VisiMisi from '../../components/profil/Visi-Misi.astro';
import Pimpinan from '../../components/profil/Pimpinan.astro';
import StrukturOrganisasi from '../../components/profil/StrukturOrganisasi.astro';
import Fakta from '../../components/profil/Fakta.astro';

const slugId = 'page-tentang'
---

<Layout>
    <Sejarah/>
    <VisiMisi/>
    <Pimpinan/>
    <StrukturOrganisasi/>
    <Fakta/>
</Layout>
 

<!-- CSS PhotoSwipe -->
<link rel="stylesheet" href="/vendor/photoswipe/photoswipe.css" />

<!-- JS PhotoSwipe inisialisasi -->
<script is:inline type="module">
  import PhotoSwipeLightbox from '/vendor/photoswipe/photoswipe-lightbox.esm.js';
  import PhotoSwipe from '/vendor/photoswipe/photoswipe.esm.js';

  const lightbox = new PhotoSwipeLightbox({
    gallery: '#pimpinan-gallery, #struktur-gallery',
    children: 'a',
    pswpModule: () => Promise.resolve(PhotoSwipe)
  });
  lightbox.init();
</script>