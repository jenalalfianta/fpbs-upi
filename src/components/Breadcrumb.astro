---
export interface BreadcrumbItem {
  label: string;
  href?: string;
}

const {
  items = [],
  className = '',
}: {
  items?: BreadcrumbItem[];
  className?: string;
} = Astro.props;

if (!items.length) {
  // Nothing to render if no breadcrumb items provided
  return null;
}
---

<nav aria-label="Breadcrumb" class={`bg-gray-50 dark:bg-gray-800 ${className}`}>
  <ol class="flex flex-wrap items-center gap-2 text-xs md:text-sm text-gray-600 dark:text-gray-300 py-3 max-w-6xl mx-auto px-0 break-words">
    {items.map((item, index) => {
      const isLast = index === items.length - 1;
      return (
        <li class="flex items-center gap-2 whitespace-normal sm:whitespace-nowrap">
          {isLast || !item.href ? (
            <span
              aria-current={isLast ? 'page' : undefined}
              class={`font-medium ${isLast ? 'text-purple-700 dark:text-purple-300' : ''}`}
            >
              {item.label}
            </span>
          ) : (
            <a href={item.href} class="hover:text-purple-700 dark:hover:text-purple-300 transition-colors">
              {item.label}
            </a>
          )}
          {!isLast && <span class="text-gray-400 dark:text-gray-500">â€º</span>}
        </li>
      );
    })}
  </ol>
</nav>

<style>
.no-scrollbar::-webkit-scrollbar { display: none; }
.no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>
