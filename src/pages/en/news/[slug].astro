---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import slugify from 'slugify';

export async function getStaticPaths() {
  const posts = (await getCollection('berita')).filter((post) => post.data.lang === 'en');

  return posts.map((post) => {
    const slug = slugify(post.data.title, { lower: true, strict: true });
    return { params: { slug } };
  });
}

const { slug } = Astro.params;

// Fetch all English posts
const posts = (await getCollection('berita')).filter((post) => post.data.lang === 'en');

// Find post by slug
const post = posts.find(
  (p) => slugify(p.data.title, { lower: true, strict: true }) === slug
);
if (!post) throw new Error(`Post not found for slug: ${slug}`);

// Render markdown using Astro Content pipeline
const { Content } = await post.render();

const { title, pubDate, image, description } = post.data;

const related = posts
  .filter((p) => p.id !== post.id)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 5);

const fixHtml = (url) => `${url}/index.html`;

const displayDate = new Date(pubDate).toLocaleDateString('en-US', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});

const breadcrumbItems = [
  { label: 'Home', href: '/en/index.html' },
  { label: 'News', href: '/en/news/index.html' },
  { label: title },
];
---

<Layout
  pageTitle={title}
  pageHeading={title}
  pageSubtitle={displayDate}
  breadcrumbItems={breadcrumbItems}
  breadcrumbBackground="bg-gray-50 dark:bg-gray-800"
  headingUppercase={false}
>
  <main class="bg-gray-50 dark:bg-gray-800 pt-10 md:pt-12 pb-24 antialiased">
    <div class="px-4 mx-auto max-w-6xl">
      <article class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm p-6 md:p-8">
        <div class="prose w-full max-w-none format format-sm sm:format-base lg:format-lg format-blue dark:prose-invert">
          {image && (
            <figure class="mb-6">
              <img src={image.url} alt={image.alt} class="w-full rounded-lg" />
              {image.alt && (
                <figcaption class="text-center text-sm text-gray-500 dark:text-gray-400 mt-2">
                  {image.alt}
                </figcaption>
              )}
            </figure>
          )}

          {/* Processed markdown content */}
          <Content />
        </div>
      </article>
    </div>
  </main>

  <aside aria-label="Related articles" class="bg-gray-50 dark:bg-gray-800 pt-10 md:pt-12 pb-20">
    <div class="px-4 mx-auto max-w-6xl">
      <h2 class="mb-8 text-3xl font-bold text-gray-900 dark:text-white">More News</h2>
      <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
        {related.map((item) => {
          const relatedSlug = slugify(item.data.title, { lower: true, strict: true });
          const relatedUrl = fixHtml(`/en/news/${relatedSlug}`);

          return (
            <article class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition flex flex-col h-full">
              {item.data.image && (
                <a href={relatedUrl}>
                  <img
                    src={item.data.image.url}
                    alt={item.data.image.alt}
                    class="w-full h-32 object-cover"
                  />
                </a>
              )}
              <div class="p-4 flex flex-col flex-1">
                <h3 class="text-base font-semibold mb-1 text-gray-900 dark:text-white leading-snug">
                  <a href={relatedUrl}>{item.data.title}</a>
                </h3>
                <p class="text-sm text-gray-700 dark:text-gray-300 line-clamp-2 mt-auto">
                  {item.data.description ?? ''}
                </p>
              </div>
            </article>
          );
        })}
      </div>
    </div>
  </aside>
</Layout>
