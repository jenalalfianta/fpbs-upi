---
import Layout from "@/layouts/Layout.astro";
import FasilitasFpbs from "@/components/en/fasilitas/FasilitasFpbs.astro";
const slugId = 'page-fasilitas';
const pageHeading = 'Facilities';
const pageSubtitle = 'Faculty of Language and Literature Education - UPI';
---

<Layout
  pageHeading={pageHeading}
  pageSubtitle={pageSubtitle}
  breadcrumbItems={[
    { label: 'Home', href: '/en/index.html' },
    { label: 'Facilities' },
  ]}
  pageHeadingOverlay="rgba(139,48,147,0.8)"
  pageHeadingAlign="left"
>
  <FasilitasFpbs/>
</Layout>

<!-- CSS PhotoSwipe -->
<link rel="stylesheet" href="/vendor/photoswipe/photoswipe.css" />

<!-- JS PhotoSwipe Initialization -->
<script is:inline type="module">
  import PhotoSwipeLightbox from '/vendor/photoswipe/photoswipe-lightbox.esm.js';
  import PhotoSwipe from '/vendor/photoswipe/photoswipe.esm.js';

  const lightbox = new PhotoSwipeLightbox({
    gallery: '#fasilitas-gallery',
    children: 'a',
    pswpModule: () => Promise.resolve(PhotoSwipe)
  });
  lightbox.init();
</script>
