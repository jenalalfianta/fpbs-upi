              <li><a href={fixHtml("/profil/kontak")} class="block px-4 py-2 hover:text-purple-700 dark:hover:text-purple-400 hover:bg-gray-100 dark:hover:bg-gray-600">Kontak</a></li>
            </ul>
          </div>
        </li>

        <!-- Dropdown Profil (Mobile) -->
        <li class="md:hidden">
          <details class="group">
            <summary class="flex items-center justify-between px-3 py-2 hover:cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-900 dark:text-white">
