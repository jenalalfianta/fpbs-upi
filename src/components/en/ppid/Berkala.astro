---
const fixHtml = (url) => `${url}.html`;
---

<!-- Mandatory Public Information Section -->
<section class="bg-white dark:bg-gray-900 pt-10 md:pt-10 pb-25 md:pb-25 px-4">
  <div class="max-w-5xl mx-auto text-center">

    <h3 class="text-2xl md:text-3xl font-bold text-purple-800 mb-10">
      MANDATORY INFORMATION TO BE REGULARLY PROVIDED AND PUBLISHED
    </h3>
    
    <div class="space-y-4 text-left">
      <!-- Faculty Profile -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Faculty Profile
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <ul class="list-disc ml-4 space-y-1">
            <li><a href="/en/profile/about.html" class="no-underline hover:text-purple-700">About FPBS</a></li>
            <li><a href="/en/profile/facilities.html" class="no-underline hover:text-purple-700">Facilities</a></li>
            <li><a href="/en/profile/contact.html" class="no-underline hover:text-purple-700">Contact</a></li>
          </ul>
        </div>
      </details>
      <!-- Study Programs -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Study Programs
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <p><a href="/en/profile/programs.html" class="no-underline hover:text-purple-700">Study Programs at the Faculty of Language and Literature Education</a></p>
        </div>
      </details>

      <!-- Leadership Profile -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Leadership Profile
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <p><a href="/en/profile/leadership.html" class="no-underline hover:text-purple-700">Leadership of the Faculty of Language and Literature Education</a></p>
        </div>
      </details>

      <!-- Academic Calendar -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Academic Calendar
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <a href="https://www.upi.edu/kalendar" target="_blank" class="no-underline hover:text-purple-700">Academic Calendar of Universitas Pendidikan Indonesia</a>
        </div>
      </details>

      <!-- Dean's Reports -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Dean's Reports
          <span class="transition-transform duration-300 group-open:rotate-180">
