---
import "../styles/global.css";
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <title>404 | FPBS</title>
  </head>
  <body class="bg-white dark:bg-gray-900 flex items-center justify-center min-h-screen">
    <section class="px-4">
      <div class="max-w-screen-sm mx-auto text-center">
        <h1 class="mb-4 text-7xl tracking-tight font-extrabold lg:text-9xl text-[#422367] dark:text-purple-400">404</h1>

        <p id="heading-text" class="mb-4 text-3xl tracking-tight font-bold text-gray-900 md:text-4xl dark:text-white">
        </p>

        <p id="paragraph-text" class="mb-4 text-lg font-light text-gray-600 dark:text-gray-400">
        </p>

        <a
          id="back-home-btn"
          href="/"
          class="inline-flex text-white bg-[#422367] hover:bg-[#341b54] focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:focus:ring-purple-900 my-4"
        >
        </a>

        <div class="mt-8 text-left">
          <h2 id="quick-links-title" class="text-base font-semibold text-gray-900 dark:text-gray-100 mb-2">
          </h2>

          <nav aria-labelledby="quick-links" class="rounded-lg border border-gray-200 dark:border-gray-700 p-4">
            <ul id="quick-links" class="grid grid-cols-1 sm:grid-cols-2 gap-y-2 gap-x-6 text-gray-600 dark:text-gray-300 text-sm">
            </ul>
          </nav>

          <p id="foot-note" class="mt-3 text-xs text-gray-500 dark:text-gray-400">
          </p>
        </div>
      </div>
    </section>

    <script is:inline>
      (function () {
        const path = window.location.pathname || '';
        const isEN = path.startsWith('/en/');

        const btn = document.getElementById('back-home-btn');
        const heading = document.getElementById('heading-text');
        const paragraph = document.getElementById('paragraph-text');
        const quickLinksTitle = document.getElementById('quick-links-title');
        const quickLinksUL = document.getElementById('quick-links');
        const footNote = document.getElementById('foot-note');

        const quickLinksEN = [
          { label: 'About FPBS',                  href: '/en/profile/about/index.html' },
          { label: 'Study Programs',              href: '/en/profile/study-programs/index.html' },
          { label: 'Facilities',                  href: '/en/profile/facilities/index.html' },
          { label: 'Leadership',                  href: '/en/profile/leadership/index.html' },
          { label: 'Staff',                       href: '/en/profile/staff/index.html' },
          { label: 'FPBS Public Information (PPID)', href: '/en/ppid/index.html' },
          { label: 'Integrity Zone',              href: '/en/integrity-zone/index.html' },
          { label: 'Document Legalization',       href: '/en/document-legalization/index.html' },
          { label: 'UPI Library',                 href: 'https://perpustakaan.upi.edu/' },
          { label: 'Admissions',                  href: 'https://pmb.upi.edu/' },
        ];

        const quickLinksID = [
          { label: 'Tentang FPBS',               href: '/profil/tentang/index.html' },
          { label: 'Program Studi',              href: '/profil/program-studi/index.html' },
          { label: 'Fasilitas',                  href: '/profil/fasilitas/index.html' },
          { label: 'Pimpinan',                   href: '/profil/pimpinan/index.html' },
          { label: 'Staf',                       href: '/profil/staf/index.html' },
          { label: 'PPID FPBS',                  href: '/ppid/index.html' },
          { label: 'Zona Integritas',            href: '/zona-integritas/index.html' },
          { label: 'Legalisasi Dokumen',         href: '/legalisasi/index.html' },
          { label: 'Perpustakaan UPI',           href: 'https://perpustakaan.upi.edu/' },
          { label: 'Penerimaan Mahasiswa Baru',  href: 'https://pmb.upi.edu/' },
        ];

        document.documentElement.lang = isEN ? 'en' : 'id';
        document.title = isEN ? 'Page Not Found | FPBS' : 'Halaman tidak ditemukan | FPBS';

        if (heading) { heading.textContent = isEN ? 'Page Not Found' : 'Halaman tidak ditemukan'; }
        if (paragraph) {
          paragraph.textContent = isEN
            ? 'Sorry, the page you are looking for is not available or may have been moved.'
            : 'Maaf, halaman yang kamu cari tidak tersedia atau sudah dipindahkan.';
        }
        if (btn) {
          btn.href = isEN ? '/en/index.html' : '/index.html';
          btn.textContent = isEN ? 'Back to Homepage' : 'Kembali ke Beranda';
        }

        if (quickLinksTitle) quickLinksTitle.textContent = isEN ? 'Quick links' : 'Tautan cepat';
        if (footNote) footNote.textContent = isEN
          ? 'Or use the navigation above to get back on track.'
          : 'Atau gunakan navigasi di atas untuk kembali ke halaman yang diinginkan.';

        if (quickLinksUL) {
          const data = isEN ? quickLinksEN : quickLinksID;
          quickLinksUL.innerHTML = '';
          data.forEach(item => {
            const li = document.createElement('li');
            const a = document.createElement('a');
            const dot = document.createElement('span');

            a.href = item.href;
            a.className = 'group inline-flex items-center hover:text-purple-700 dark:hover:text-purple-400';
            a.textContent = item.label;

            dot.className = 'mr-2 h-1.5 w-1.5 rounded-full bg-gray-300 group-hover:bg-purple-500 dark:bg-gray-600';

            a.prepend(dot);
            li.appendChild(a);
            quickLinksUL.appendChild(li);
          });
        }
      })();
    </script>

    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
</html>
